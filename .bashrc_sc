export LC_NUMERIC="en_US.UTF-8"

if [[ ! -v SILENT ]]; then
	export SILENT=0
fi

## HELP ##
schelp(){
    ~/.sc_scripts/help $@
}

## MY SCRIPTS
protected_directories=".sc_scripts psc"

sc_init(){
    ~/.sc_scripts/.sc_init $@
}

cluster_info(){
if [[ $protected_directories == *"$(basename $(pwd))"* ]]; then
	echo -e "\e[1;91mProtected directory cant use script here!!!\e[0m"
else
    ~/.sc_scripts/cluster_info $@
fi
}

